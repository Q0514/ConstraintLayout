<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_basics"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="基本资料"
            android:textColor="#333333"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_head_portrait"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_basics"
            app:layout_constraintTop_toTopOf="parent"
          />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="保存"
            android:textColor="#4F61E7"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_basics"
            app:layout_constraintEnd_toEndOf="@+id/tv_basics"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_head_portrait"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="center|left"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_basics"
             />

        <View
            android:id="@+id/v_head_portrait"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_head_portrait" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="center|left"
            android:text="用户名"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_head_portrait"
             />

        <View
            android:id="@+id/v_username"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_username" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="center|left"
            android:text="性别"
            android:textSize="15sp"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
             />

        <View
            android:id="@+id/v_gender"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

        <TextView
            android:id="@+id/tv_birthdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="center|left"
            android:text="出生年月"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender"

             />

        <TextView
            android:id="@+id/tv_individual_resume"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center|left"
            android:text="个人简介"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@+id/tv_birthdate"
            />


        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_head_portrait"
            app:layout_constraintEnd_toEndOf="@+id/tv_head_portrait"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_head_portrait"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17876217919"
            android:textColor="#ff333333"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username"
            app:layout_constraintEnd_toEndOf="@+id/tv_username"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/tv_username"
            app:layout_constraintTop_toBottomOf="@+id/tv_head_portrait" />

        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textSize="15sp"
            android:textColor="#ff333333"
            app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
            app:layout_constraintEnd_toEndOf="@+id/tv_gender"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/tv_gender"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            />

        <TextView
            android:id="@+id/tv_digital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1998年05月14日"
            android:textColor="#ff333333"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_birthdate"
            app:layout_constraintEnd_toEndOf="@+id/tv_birthdate"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/tv_birthdate"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender"
            />


        <EditText
            android:id="@+id/et_please_enter_the_contents"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFFFFFFF"
            android:gravity="top|left"
            android:hint="  请输入内容"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="#ff333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_individual_resume"
           />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100"
            android:textSize="15sp"
            android:textColor="#ff333333"
            app:layout_constraintBottom_toBottomOf="@+id/et_please_enter_the_contents"
            app:layout_constraintEnd_toEndOf="@+id/et_please_enter_the_contents"
            />


</androidx.constraintlayout.widget.ConstraintLayout>
